#include <stdio.h>
int main()
{
    int n;
    
    printf("Enter Integer: ");
    scanf("%d", &n);
    if (n > 0)
    {
        for (int a = 1; a < n + 1; a++)
        {
            for (int b = 1; b <= a; b++)
            {
                if (b == 1)
                {
                    for (int c = 0; c < n - a; c++)
                    {
                        printf(" ");
                    }
                }   
                printf("* ");
            }
            printf("\n");
        }
    }
   
    else
    {
        printf("Invalid input!");
    }
    return 0;
}
